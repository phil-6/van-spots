<div class="vs-form">
  <h2>Sign up</h2>

  <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group floating-label">
      <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: '  Email' %>
      <%= f.label :email %>
    </div>

    <div class="form-group floating-label">
      <%= f.text_field :username, autocomplete: "username", class: 'form-control', placeholder: '  Username' %>
      <%= f.label :username %>
    </div>

    <div class="form-group floating-label">
      <%# if @minimum_password_length %>
<!--      <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
<!--      <%# end %>-->
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: '  Password' %>
      <%= f.label :password %>
    </div>

    <div class="form-group floating-label">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: '  Password again' %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="form-group floating-label">
      <%= f.text_area :description, autocomplete: "description", class: 'form-control', placeholder: '  Something about you.' %>
      <%= f.label :description %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
    <div class="other-actions">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>


</div>