<div class="vs-form">
  <h2>Create New Spot</h2>

  <%= form_for @spot, url: {action: "create"} do |spot_form| %>
    <div class="form-group">
      <%= spot_form.label :name, 'Spot Name' %><br />
      <%= spot_form.text_field :name, class: 'form-control', :required => true  %>
    </div>

    <div class="form-group">
      <%= spot_form.label :spot_type, 'Spot Type' %><br />
      <%= spot_form.select(:spot_type,
                           options_for_select([['Free Spot', 'Free Spot'],
                                               ['Paid Spot', 'Paid Spot'],
                                               ['Campsite', 'Campsite'],
                                               ['MTB Spot', 'MTB Spot'],
                                               ['Climbing Spot', 'Climbing Spot'],
                                               ['Kayaking Spot', 'Kayaking Spot'],
                                               ['Surf Spot','Surf Spot'],
                                               ['Toilet', 'Toilet'],
                                               ['Shower', 'Shower']
                                              ], 'Free Spot'),
                           {include_blank: false,
                            include_hidden: false},
                           {:class => 'form-control'}) %>
    </div>

    <div class="form-group">
      <%= spot_form.label :description %><br />
      <%= spot_form.text_area :description, class: 'form-control', :required => true  %>
    </div>

    <%= spot_form.label :location %><br />
    <div class="form-row">
      <div class="form-group col-sm-6">
      <%= spot_form.label :latitude %>
      <%= spot_form.text_field :latitude,
                               class: 'form-control',
                               :required => true,
                               :pattern => "^(\\+|-)?(?:90(?:(?:\\.0{1,6})?)|(?:[0-9]|[1-8][0-9])(?:(?:\\.[0-9]{1,6})?))$",
                               :placeholder => '51.605411'
      %>
      </div>
      <div class="form-group col-sm-6">
      <%= spot_form.label :longitude %>
      <%= spot_form.text_field :longitude,
                               class: 'form-control',
                               :required => true,
                               :pattern => "^(\\+|-)?(?:180(?:(?:\\.0{1,6})?)|(?:[0-9]|[1-9][0-9]|1[0-7][0-9])(?:(?:\\.[0-9]{1,6})?))$",
                               :placeholder => '-3.983570'
      %>
      </div>
    </div>

    <div class="actions form-group">
      <%= link_to "Back", :back, class: 'btn btn-secondary' %>
      <%= spot_form.submit "Create Spot", class: 'btn btn-primary'  %>
    </div>

  <% end %>

</div>