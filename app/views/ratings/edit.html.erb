<%= render partial: 'layouts/alerts' %>
<div class="vs-form">
  <h2>Edit your rating for:</h2>
  <h2><%= @spot.name %>?</h2>
  <div>
    <%= @spot.description %>
  </div>

  <br/>

  <%= form_for @rating, url: {action: "update"} do |rating_form| %>
    <div class="form-group">
      <%= rating_form.label :score %><br/>
      <%= rating_form.text_field :score, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= rating_form.label :review_title, 'Review Title' %><br/>
      <%= rating_form.text_field :review_title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= rating_form.label :review_body, 'Review Body' %><br/>
      <%= rating_form.text_area :review_body, class: 'form-control' %>
    </div>

    <div class="actions form-group">
      <%= link_to "Back", :back, class: 'btn btn-secondary' %>
      <%= rating_form.submit "Update Rating", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>