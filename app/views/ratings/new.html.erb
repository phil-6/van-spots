<div class="vs-form">
  <h2>How would you rate:</h2>
  <h2><%= @spot.name %>?</h2>
  <div>
    <%= @spot.description %>
  </div>

  <br/>

  <%= form_for @rating, url: {action: "create"} do |rating_form| %>
    <div class="form-group">
      <%= rating_form.label :score %><br/>
      <%= rating_form.text_field :score, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= rating_form.label :review_title %><br/>
      <%= rating_form.text_field :review_title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= rating_form.label :review_body %><br/>
      <%= rating_form.text_area :review_body, class: 'form-control' %>
    </div>

    <%= rating_form.hidden_field :spot_id, value: @spot.id %>

    <div class="actions form-group">
      <%= link_to "Back", :back, class: 'btn btn-secondary' %>
      <%= rating_form.submit "Rate Spot", class: 'btn btn-primary' %>
    </div>

  <% end %>
</div>